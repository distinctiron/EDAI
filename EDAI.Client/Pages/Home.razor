@page "/"
@inject NavigationManager Navigation

<PageTitle>Home</PageTitle>

<div class="logo-container">
    <div class="svg-container">
        <svg viewBox="0 -15 200 100" xmlns="http://www.w3.org/2000/svg">
            <!-- Thin top semi-circle -->
            <path d="M 45 45 A 40 40 0 0 1 155 45" fill="none" stroke="#333" stroke-width="2" stroke-linecap="round"/>

            <style>
                .edai-text {
                    font-family: 'Poppins', sans-serif;
                    font-weight: 700;
                    font-size: 32px;
                    text-anchor: middle;
                    fill: #333;
                }
            </style>

            <!-- EDAI text -->
            <text x="100" y="60" class="edai-text">EDAI</text>
        </svg>
    </div>    
    <div>
        <h5 class="logo-auxilary-text">Your AI-powered reviewer</h5>
    </div>
    <AuthorizeView>
        <Authorized>
            <MudButton Color="Color.Dark" Variant="Variant.Filled" OnClick="@(() => Navigation.NavigateTo("/fileupload"))" Class="mt-6">Get Started</MudButton>        
        </Authorized>
        <NotAuthorized>
            <MudButton Color="Color.Dark" Variant="Variant.Filled" OnClick="@(() => Navigation.NavigateTo("/login"))" Class="mt-6">Log in</MudButton>
        </NotAuthorized>
    </AuthorizeView>
    
    
    
</div>

@code {
    protected override void OnInitialized()
    {
        Console.WriteLine("Home initialized");
        
    }
    
    
}